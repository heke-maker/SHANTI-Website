<div class="auth-page-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1>新規会員登録</h1>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "styled-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード (#{@minimum_password_length}文字以上)" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード(確認用)" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
      </div>

      <div class="actions">
        <%= f.submit "登録する", class: "auth-submit-btn" %>
      </div>
    <% end %>

    <div class="auth-footer-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>